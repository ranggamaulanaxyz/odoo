<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_users_form_simple_modif_linked_account" model="ir.ui.view">
        <field name="name">users.form.simple.modif.linked.account</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form_simple_modif" />
        <field name="arch" type="xml">
            <xpath expr="//page[@name='page_account_security']" position="after">
                <page string="Linked Account" name="page_account_linked">
                    <field name="link_account_ids">
                        <list>
                            <field name="name" />
                            <field name="platform" />
                        </list>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>